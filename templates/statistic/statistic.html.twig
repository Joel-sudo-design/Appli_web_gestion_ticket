{% extends 'base.html.twig' %}

{% block title %}Statistic{% endblock %}

{% block javascripts %}{% endblock %}

{% block body %}
    <body style="background: #0F75AD">
    <div class="container text-white d-flex flex-column justify-content-center" style="min-height: 100vh">
        {% set categories = ['Messagerie', 'Serveur', 'Dolibarr', 'Internet', 'Imprimante', 'Logiciel', 'Matériel', 'Autre'] %}
        <!-- Première ligne : affichage des en-têtes de colonnes -->
        <div class="row">
            <div class="col-1"></div>
            {% for cat in categories %}
                <div class="col border d-flex align-items-center justify-content-center fw-bold p-2">{{ cat }}</div>
            {% endfor %}
        </div>
        <!-- Deuxième ligne : affichage des valeurs (nombre de tickets) -->
        <div class="row mt-3">
            <div class="col-1 border d-flex align-items-center text-center p-1">Nombre de tickets</div>
            {% for cat in categories %}
                <div class="col border d-flex align-items-center justify-content-center">
                    {{ statistic[cat]|default(0) }}
                </div>
            {% endfor %}
        </div>
        <div class="row mt-5">
            <div class="text-center">
                <a href="{{ path('app_modify_information_admin') }}" class="text-white text-decoration-none">
                    <span class="underline">Retour page informations</span>
                </a>
            </div>
        </div>
    </div>
    </body>
{% endblock %}
