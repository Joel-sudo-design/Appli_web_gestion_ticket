{% extends 'base.html.twig' %}

{% block title %}Création compte{% endblock %}

{% block body %}
    <body style="background: #0F75AD">
        <div class="container">
            <div class="row vh-100 align-items-center justify-content-center">
                <div class="col box box-register">
                    <form method="post" id="form">
                        <div class="fs-4 text-white text-center text-decoration-underline information mt-3 mb-5" style="text-underline-offset: max(4px)">Nouveau compte</div>
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="text-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                        <div class="row align-items-center justify-content-center">
                            <div class="col-6">
                                {% if not registrationForm.vars.valid %}
                                    {% for child in registrationForm.children %}
                                        {%for error in child.vars.errors%}
                                            <div class="text-danger text-center">{{error.message}}</div>
                                        {%endfor%}
                                    {%endfor%}
                                {%endif%}
                            </div>
                        </div>
                        <div class="text-center requirement hidden error mb-2" id="matchEmail">Le format de l'email est invalide</div>
                        <div class="row justify-content-center">
                            <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-6 col-sm-8 col-8">
                                <div class="input-container">
                                    <input type="text" name="{{ field_name(registrationForm.username) }}" class="input" id="username" required/>
                                    <label class="label" for="username">Nom d'utilisateur</label>
                                </div>
                                <div class="input-container mt-3">
                                    <input type="password" name="{{ field_name(registrationForm.plainPassword) }}" class="input inputPassword" id="password" required/>
                                    <label class="label" for="password">Mot de passe</label>
                                    <span id="eye-password"><i class="bi bi-eye-slash" id="hide_eye"></i><i class="bi bi-eye d-none" id="show_eye"></i></span>
                                </div>
                                <div id="requirements" class="mx-1 mt-3 mb-3">
                                    <p class="requirement" id="length">Minimum 8 caractères</p>
                                    <p class="requirement" id="lowercase">Minimum 1 lettre minuscule</p>
                                    <p class="requirement" id="uppercase">Minimum 1 lettre majuscule</p>
                                    <p class="requirement" id="number">Minimum 1 chiffre</p>
                                    <p class="requirement" id="characters">Minimum 1 caratère spécial: #.-?!@$%^&*</p>
                                </div>
                            </div>
                            <div class="email-register1 col-xxl-5 col-xl-5 col-lg-5 col-md-6 col-sm-8 col-8">
                                <div class="email-register2 input-container">
                                    <input type="email" name="{{ field_name(registrationForm.emailAddress) }}" class="input" id="emailAddress" aria-describedby="requirements" required/>
                                    <label class="label" for="emailAddress">Email</label>
                                </div>
                                <div>
                                    <div class="input-container mt-3">
                                        <input type="password" name="confirm-password" class="input inputConfirmPassword" id="confirm-password" aria-describedby="requirements" required/>
                                        <label class="label" for="confirm-password"> Confirmer</label>
                                        <span id="eye-confirm-password"><i class="bi bi-eye-slash" id="hide_eye2"></i><i class="bi bi-eye d-none" id="show_eye2"></i></span>
                                    </div>
                                    <div class="mx-1 match">
                                        <p class="requirement hidden error" id="match">Les mots de passe sont différents</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row align-items-center justify-content-center mt-5 mb-2">
                            <div class="col-xxl-5 col-xl-4 col-lg-5 col-md-6 col-sm-8 col-8 mb-4">
                                <div class="d-flex align-items-start">
                                    {{ form_row(registrationForm.agreeTerms) }}
                                    <div class="text-white text-decoration-none mx-2">J'ai lu et j'accepte les conditions, <button id="conditions" style="color: #ff9966" class="create" type="button" value="ici" data-bs-toggle="modal" data-bs-target="#Modal">ici</button></div>
